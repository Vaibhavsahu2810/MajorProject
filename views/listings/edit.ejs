<% layout("/layouts/boilerplate") %>
  <body>
    <h3 class="mb-4 justify-center align-middle text-center text-2xl">Edit your Listing</h3>
    <form method="POST" action="/listings/<%= item._id %>?_method=PATCH" enctype="multipart/form-data" novalidate class="max-w-lg mx-auto needs-validation">
        <div class="mb-3">
            <label for="title"  class="block text-sm font-medium text-gray-700">Title</label>
            <input type="text" name="listing[title]" value="<%= item.title %>" class="form-control" required>
            <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Please enter a valid title.</div>
        </div>
     
      <div class="mb-3">
        <label for="description"  class="block text-sm font-medium text-gray-700"
          >Description</label
        >
        <textarea
          name="listing[description]"
          class="form-control"
          required
        ><%= item.description %></textarea
        >
        <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Please enter a valid description.</div>
      </div>
      <div class="mb-3">
        <label for="price"  class="block text-sm font-medium text-gray-700">Price (in &#8377;)</label>
        <input
          type="number"
          step=".01"
          required
          name="listing[price]"
          value="<%= item.price %>"
          class="form-control"
          
        />
        <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Please enter a valid price.</div>
      </div>
      <div class="mb-3">
        <label for="image"  class="block text-sm font-medium text-gray-700">Upload Image</label>
        <input type="file" name="listing[image]" class="form-control"/>
        <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Please enter a valid image file.</div>
      </div>
      <div class="mb-3">
        <label for="location"  class="block text-sm font-medium text-gray-700">Location</label>
        <input
          name="listing[location]"
          value="<%=item.location%>"
          required
          class="form-control"
        />
        <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Please enter a valid location.</div>
      </div>
      <div class="mb-3">
        <label for="country"  class="block text-sm font-medium text-gray-700">Country</label>
        <input type="text" name="listing[country]" required value="<%=item.country%>" class="form-control" />
        <div class="valid-feedback">Looks good!!</div>
            <div class="invalid-feedback">Please enter a valid country.</div>
      </div>
      
      <button class="px-4 py-2 bg-red-500 text-white rounded hover:bg-red-700 focus:outline-none focus:bg-red-600">Edit</button>
    </form>
  </body>
</html>